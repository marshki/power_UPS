#!/usr/bin/env bash
# Check if command(s)--provided as an argument(s)--exists.
# Exit if not.

command_check() {
  for cmd in "$@"; do
    if ! command -v "$cmd" >/dev/null 2>&1; then
    printf "Error: Required command '%s' not found. Exiting.\n" "$cmd" >&2
  exit 1
  fi
done
}

command_check "pwrstat" "whiptail"
