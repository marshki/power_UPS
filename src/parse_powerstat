#!/usr/bin/env bash
# Parse output of `pwrstat` command and print (cleanly)

# Capture pwrstat command output
pwrstat_output=$(pwrstat -status)

# Parse all required values using awk
parse_output() {
  awk '
    BEGIN {
      FS = "[.]+"
      model = ""
      event = ""
      battery = ""
      runtime = ""
      load = ""
    }
    /Model Name/        { model = "Model Name:            " $2 }
    /Power Event/       { event = "Status:                " $2 }
    /Battery Capacity/  { battery = "Battery Capacity:      " $2 }
    /Remaining Runtime/ { runtime = "Remaining Runtime:     " $2 }
    /Load/              { load = "Load:                  " $2 }
    END {
      print model
      print event
      print battery
      print runtime
      print load
    }
  ' <<< "$pwrstat_output"
}

parse_output
